<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/signupActivity_imageview_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="50dp"
        android:src="@drawable/profile_upload" />

    <EditText
        android:id="@+id/signupActivity_edittext_email"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/signupActivity_edittext_name"
        android:hint="이름"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/signupActivity_edittext_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="패스워드" />

    <EditText
        android:id="@+id/signupActivity_edittext_confirm_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="패스워드 확인" />


    <Button
        android:text="회원가입"
        android:layout_marginTop="20dp"
        android:id="@+id/signupActivity_button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/signupActivity_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="뒤로가기" />

</LinearLayout>
